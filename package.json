{
  "name": "mono-lm",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "./dist-electron/main.js",
  "scripts": {
    "dev:web": "vite",
    "dev:electron": "concurrently -n \"LM,Electron\" \"npm run dev:web\" \"npm run start:electron\"",
    "dev:android": "ionic cap run android -l --external",
    "dev:ios": "ionic cap run ios -l --external",
    "_start:electron": "npm run transpile:electron && electron .",
    "start:electron": "nodemon -e ts --exec \"npm run _start:electron\" ./electron",
    "build:lm": "tsc && vite build",
    "build:electron": "rm -rf dist && npm run transpile:electron && npm run build:lm && electron-builder --mac",
    "transpile:electron": "tsc -p electron/tsconfig.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "@capacitor/android": "7.4.3",
    "@capacitor/app": "7.1.0",
    "@capacitor/core": "7.4.3",
    "@capacitor/device": "7.0.2",
    "@capacitor/filesystem": "7.1.4",
    "@capacitor/haptics": "7.0.2",
    "@capacitor/ios": "7.4.3",
    "@capacitor/keyboard": "7.0.3",
    "@capacitor/status-bar": "7.0.3",
    "@capgo/capacitor-updater": "^7.0.53",
    "@ionic/react": "^8.5.0",
    "@ionic/react-router": "^8.5.0",
    "@tanstack/react-query": "^5.75.1",
    "@types/react-router": "^5.1.20",
    "@types/react-router-dom": "^5.3.3",
    "express": "^5.1.0",
    "ionicons": "^7.4.0",
    "localforage": "^1.10.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router": "^5.3.4",
    "react-router-dom": "^5.3.4",
    "typestyle": "^2.4.0",
    "valtio": "^2.1.4",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@capacitor/cli": "7.4.3",
    "@eslint/js": "^9.22.0",
    "@ionic/cli": "7.2.1",
    "@julr/vite-plugin-validate-env": "^1.3.0",
    "@testing-library/dom": ">=7.21.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/express": "^5.0.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-legacy": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cypress": "^14.0.0",
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^22.1.0",
    "nodemon": "^3.1.10",
    "sass": "^1.87.0",
    "terser": "^5.4.0",
    "tsx": "^4.19.4",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.0.0",
    "vitest": "3.2.4"
  }
}
